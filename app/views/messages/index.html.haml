%div.wrapper
  %nav.side-nav
    %div.account
      %p.name= current_user.name
      = link_to edit_user_path(current_user) do
        %i.fa.fa-cog
      = link_to new_group_path do
        %i.fa.fa-pencil-square-o

    %div.group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group.id) do
          %p.group_name= group.group_name
        %p.group_name--comment Hello World!

  %nav.content
    %div.content_group
      %p.content_group--name= @group.group_name
      %input.content_group--edit{:type => "submit", :value => "Edit"}
      %p.content_group--member
        - @group.members.each do |member|
          = "#{member.user.name}"


    %div.content_message
      %li.content_message--name tomohiro
      %li.content_message--date 2017/10/31/18:00:00
      %li.content_message--comment Hello World!

      %li.content_message--name michiko
      %li.content_message--date 2017/10/31/19:00:00
      %li.content_message--comment 何時に帰るの？

    %div.content_typemessage
      %p.content_typemessage--space
        = form_for [@group,@message] do |f|
          = f.text_field :body, :placeholder =>'type a message', autofocus: true
          = f.submit "SEND"
